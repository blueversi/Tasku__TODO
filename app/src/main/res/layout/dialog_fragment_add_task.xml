<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:minWidth="300dp"
    android:minHeight="250dp"
    android:padding="15dp"
    android:background="@color/antiFlashLight">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center"
        android:background="@color/antiFlashLight">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Task name" />


        <EditText
            android:id="@+id/taskNameInputField"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:hint="Hello World!" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Choose Category" />

        <Spinner
            android:id="@+id/chooseCategory"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Choose Cat" />

        <LinearLayout
            android:id="@+id/dialogButtonsLayout"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="476dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/closeBtn"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:background="@color/watermelon"
                android:prompt="@string/chooseCategoryPrompt"
                android:text="close"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@color/limeSoap"
                android:prompt="@string/chooseCategoryPrompt"
                android:text="save"
                android:textColor="#FFF" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

